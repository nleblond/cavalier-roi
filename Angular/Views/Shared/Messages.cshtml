@model List<WS.Models.OUT.Contenu>


@if ((Model != null) && (Model.Count > 0))
{

    foreach (WS.Models.OUT.Contenu _Current in Model)
    {
        <div id="Div_Message" class="modal_message">
            <img class="fermer" src="@Constants.IMG_URL/Boutons/Fermer.svg" />
            <img src="@Constants.IMG_URL/Contenus/@_Current.Id/@_Current.Full" class="photo" />
            <div class="texte">@Html.Raw(@_Current.Texte.ToBR())</div>
        </div>
    }
}


<script language="javascript" src="@Constants.ROOT_URL/Scripts/Views/Shared/Messages.js" type="text/javascript"></script>
