
@{
    Layout = "~/Views/Shared/_LayoutBackOffice.cshtml";
}


<h1>Gestion des produits</h1>

<div class="filtre">
    <h2>Filtre</h2>

    <div class="elements">
        <input type="text" placeholder="ID Produit" />
        <div class="br10"></div>
        <input type="text" placeholder="Libellé" />
        <div class="br10"></div>
        <select id="Select_Catégorie">
            <option value="-1">Catégorie</option>
        </select>
        <div class="br10"></div>
        <input type="text" placeholder="Stock minimum" />
        <div class="br10"></div>
        <input type="text" placeholder="Stock maximum" />
        <div class="br10"></div>
        <input type="text" placeholder="ID Commande" />
        <div class="br10"></div>
        <input type="button" title="Rechercher" value="Rechercher" class="rechercher" />
    </div>

    <input type="button" title="Ajouter" value="Ajouter" class="ajouter" />

</div>

<div class="small_resultats">
    <h2>Resultats</h2>

    <table cellpadding="2" cellspacing="0" border="0" class="first">
        <thead>
            <tr>
                <th>Visuel</th>
                <th>ID Produit</th>
                <th>Libellé</th>
                <th>Catégorie</th>
                <th>Stock</th>
                <th>Prix</th>
                <th>Commandes</th>
                <th>Logo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img src="~/Content/Images/jeu.jpg" /></td>
                <td>P00001</td>
                <td>PENDULE EDITION LIMITEE WINECHEC</td>
                <td>Pendule</td>
                <td>10</td>
                <td>20,00€</td>
                <td><a href="/Commandes" title="Voir les commandes">2</a></td>
                <td><img src="~/Content/Images/Logo.png" /></td>
                <td>
                    <input type="button" title="Gérer" value="Gérer" />
                    <input type="button" title="Supprimer" value="Supprimer" />
                </td>
            </tr>
            <tr class="last">
                <td><img src="~/Content/Images/jeu.jpg" /></td>
                <td>P00001</td>
                <td>PENDULE EDITION LIMITEE WINECHEC</td>
                <td>Pendule</td>
                <td>10</td>
                <td>20,00€</td>
                <td><a href="/Commandes" title="Voir les commandes">2</a></td>
                <td><img src="~/Content/Images/Logo.png" /></td>
                <td>
                    <input type="button" title="Gérer" value="Gérer" />
                    <input type="button" title="Supprimer" value="Supprimer" />
                </td>
            </tr>
        </tbody>
    </table>

    <div class="clear"></div>

    <div class="pagination">1 2 3 4</div>

    <div class="clear"></div>

</div>

<div class="details">
    <h2>Details</h2>

    <div class="elements">
        <span>P00001</span>
        <div class="br10"></div>
        <input type="text" placeholder="Libellé" class="libelle" />
        <div class="br10"></div>
        <select id="Select_Catégorie">
            <option value="-1">Catégorie</option>
        </select>
        <div class="br10"></div>
        <textarea placeholder="Descriptif" cols="33" rows="15" class="descriptif"></textarea>
        <div class="br10"></div>
        <input type="text" placeholder="Stock" class="stock" />
        <div class="br10"></div>
        <input type="text" placeholder="Prix" class="prix" />€
        <div class="br10"></div>
        <input type="text" placeholder="Poids" class="poids" />g
        <div class="br10"></div>
        <input type="text" placeholder="Longueur" class="longueur" />cm&nbsp;&nbsp;<input type="text" placeholder="Largeur" class="largeur" />cm&nbsp;&nbsp;<input type="text" placeholder="Hauteur" class="hauteur" />cm
        <div class="br10"></div>
        <input type="checkbox" id="CheckBox_Depassement" placeholder="Dépassement" class="depassemernt" /><label for="CheckBox_Depassement">Dépassement de forfait livraison</label>
        <div class="br10"></div>
        <label for="File_Logo">Logo</label>&nbsp;&nbsp;<input type="file" id="File_Logo" placeholder="Logo" />
        <div class="br10"></div>
        <label for="File_Visuel">Visuel</label>&nbsp;&nbsp;<input type="file" id="File_Visuel" placeholder="Visuel" />
        <div class="clear"></div>
        <input type="button" title="Valider" value="Valider" />
        <div class="clear"></div>
    </div>

    <div class="clear"></div>
</div>

<div class="clear"></div>

